// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+r",
        "command": "workbench.action.tasks.reRunTask",
        "when": "taskCommandsRegistered && !terminalFocus && !vim.active"
    },
    {
        "key": "ctrl+r",
        "command": "-workbench.action.tasks.reRunTask",
        "when": "taskCommandsRegistered && !terminalFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "filesExplorerFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "searchViewletFocus"
    },
    {
        "key": "shift+cmd+k",
        "command": "-editor.action.deleteLines",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+cmd+k",
        "command": "git.stageSelectedRanges",
        "when": "isInDiffEditor && !operationInProgress"
    },
    {
        "key": "cmd+k alt+cmd+s",
        "command": "-git.stageSelectedRanges",
        "when": "isInDiffEditor && !operationInProgress"
    },
    {
        "key": "cmd+l",
        "command": "-workbench.action.gotoLine"
    },
    {
        "key": "ctrl+d",
        "command": "-workbench.action.debug.run",
        "when": "debuggersAvailable && !inDebugMode && !terminalFocus"
    },
    {
        "key": "cmd+;",
        "command": "-workbench.action.tasks.configureTaskRunner"
    },
    {
        "key": "cmd+; cmd+q",
        "command": "editor.closeTestPeek",
    },
    {
        "key": "cmd+k",
        "command": "workbench.action.showOutputChannels",
        "when": "\"focusedView == 'output'\""
    },
    {
        "key": "cmd+k",
        "command": "workbench.action.showOutputChannels",
        "when": "focusedView == 'output'"
    },
]